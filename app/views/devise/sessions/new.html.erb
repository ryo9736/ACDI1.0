<div class="flex-container">
  <div class = "row">
    <div class="main col-md-12">
    <h1>
      <i class="fas fa-sign-in-alt"></i>
      <strong>ログイン</strong>
      <i class="fas fa-sign-in-alt"></i>
      </h1>
      <div class="card text-center" style="max-width":5rem>
        <div class="card-body">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

              <div class="field">
              <br>
              <h4><%= f.label :email %>  <button type="button" class="btn btn-danger" style="width:50px">必須</button><h4/>
                  <%= f.email_field :email, class: "form-control", autofocus: true, placeholder:"example@.com", autocomplete: "email" %>
              </div>

              <div class="field">
              <br>
              <h4><%= f.label :password %>  <button type="button" class="btn btn-danger" style="width:50px">必須</button><h4/><h4/>
                  <%= f.password_field :password, class: "form-control", placeholder:"パスワードは６文字以上です。", autocomplete: "current-password" %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="field">
                <br>
                <h4><%= f.check_box :remember_me %>
                    <%= f.label :ログインを記憶する %>
                </div>
              <% end %>

              <div class="actions">
              <br>
              <h4><%= f.submit "ログインする", class:'btn btn-success rounded-pill btn-lg my-1 mb-5 px-5' %>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>