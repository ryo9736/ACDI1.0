<div class="flex-container">
  <div class = "row">
    <div class="main col-md-12">
      <h1>
      <i class="fas fa-user-plus"></i>
      <strong>新規登録</strong>
      <i class="fas fa-user-plus"></i>
      </h1>
      <div class="card text-center" style="max-width":5rem">
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field">
            <h4><%= f.label :email %>
            <br>
                <%= f.email_field :email, class: "form-control", autofocus: true, placeholder:"example@.com",autocomplete: "email" %>
            </div>

            <div class="field">
            <h4><%= f.label :password %><h4/>
                <%= f.password_field :password, class: "form-control", placeholder:"パスワードは６文字以上です。", autocomplete: "new-password" %>
            </div>

            <div class="field">
            <h4><%= f.label :password_confirmation %><h4/>
                <%= f.password_field :password_confirmation, class: "form-control",placeholder:"確認のためパスワードを入力して下さい。", autocomplete: "new-password" %>
            </div>

            <div class="field">
            <h4><%= f.check_box :trainer %>
                <%= f.label :トレーナー, :as => :boolean, checked:true %>
            </div>

            <div class="field">
            <h4><%= f.check_box :trainee %>
                <%= f.label :トレー二ー, :as => :boolean, checked:true %>
            </div>

            <div class="actions">
            <h4><%= f.submit "新規登録する", class:'btn btn-success rounded-pill btn-lg my-1 mb-5 px-5' %>
            </div>
          <% end %>


          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <h4>
            <strong>登録なしでログインできます</strong>
            </h4>
            <h4>⬇︎</h4>
            <%= f.hidden_field :email, value: "2@2.com" %>
            <%= f.hidden_field :password, value: "222222" %>
            <%= button_tag sanitize('<i class="fa fa-sign-in fa-lg"></i> 簡単ログイン'), class:'btn btn-dark rounded-pill btn-lg my-1 mb-5 px-5' %>
          <% end %>

      </div>
    </div>
  </div>
</div>