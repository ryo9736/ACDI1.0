  <% reviews.each do |review| %>
    <% if review.reviewer_id.present?  %>
      <% @reviwer = User.find_by(id: review.reviewer_id) %>
      <h3>by<%= @reviwer.name %>さん<h3>
      <h4>レビュー:<%= review.content %></h4>
      <% if @reviwer == current_user %>
        <div class = "edit_review">
          <h5><%= link_to '編集する', edit_user_review_path(review.user_id, review.id), method: :get,remote: true %></h5>
        </div>
        <div class = "destory_review">
          <h5><%= link_to '削除する', user_review_path(review.user_id, review.id), method: :delete, remote: true %></h5>
        </div>
      <% end %>
    <% end %>
  <% end %>