<div class="flex-container">
  <div class="user_index_background">
    <div class = "row">
        <h1 style="width: 100%;height: 100px;display: flex;justify-content: center;align-items: center;color: #000;">
          <i class="fas fa-users fa"></i>
          <strong>ユーザー一覧</strong>
          <i class="fas fa-users fa"></i>
        </h1>
          <div class="card__container">
            <div class="row">
              <% @users.each do |u| %>
                  <div class = "users_index">
                    <div class="card d-flex justify-content-around" style="height:200px">
                      <div class="card-body">
                        <h2><%= image_tag u.image.url,class: "small-img" if u.image && u.image.url  %></h2>
                        <h2><a href="/users/<%= u.id %>"><%= u.name %>さん</a></h2>
                        <% if u.trainer == true %>
                          <h2>
                            <strong>トレーナー</strong>
                              <i class="fas fa-user-graduate"></i>
                          </h2>
                        <% else %>
                          <h2>
                            <strong>トレーニー</strong>
                            <i class="fas fa-user-tie"></i>
                            </h2>
                        <% end %>
                          <h2>地域:<%= u.area %></h2>
                      </div>
                    </div>
                  </div>
              <% end %>
            </div>
          </div>
    </div>
  </div>
</div>