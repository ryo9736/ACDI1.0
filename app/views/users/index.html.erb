<div class="flex-container">
  <div class = "row">
    <div class="main_left col-md-6">
      <h1>
        <i class="fas fa-user-graduate"></i>
        <strong>トレーナー</strong>
        <i class="fas fa-user-graduate"></i>
      </h1>
        <% @users.each do |u| %>
          <% if u.trainer == true %>
            <div class="card  text-center" style="max-width":5rem>
              <div class="card-body">
                <h2><%= image_tag u.image.url,class: "small-img" if u.image && u.image.url %></h2>
                <h2><a href="/users/<%= u.id %>"><%= u.name %>さん</a></h2>
                <h2>
                <strong>トレーナー</strong>
                <i class="fas fa-user-graduate"></i>
                </h2>
                 <h2>地域:<%= u.area %></h2>
              </div>
            </div>
          <% end %>
        <% end %>
    </div>
    <div class="main_left col-md-6">
      <h1>
        <i class="fas fa-user-tie"></i>
        <strong>トレーニー</strong>
        <i class="fas fa-user-tie"></i>
      </h1>
      <% @users.each do |u| %>
        <% if u.trainee == true %>
          <div class="card  text-center" style="max-width":5rem>
            <div class="card-body">
              <h2><%= image_tag u.image.url,class: "small-img" if u.image && u.image.url %></h2>
              <h2><a href="/users/<%= u.id %>"><%= u.name %>さん</a></h2>
              <h2>
              <strong>トレーニー</strong>
              <i class="fas fa-user-tie"></i>
              </h2>
              <h2>地域:<%= u.area %></h2>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
