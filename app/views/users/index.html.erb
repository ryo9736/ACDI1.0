<div class="flex-container">
  <div class = "row">
    <div class="main_left col-md-12">
      <h1>
      <i class="fas fa-users"></i>
      <strong>ユーザー一覧</strong>
      <i class="fas fa-users"></i>
      </h1>
        <% @users.each do |u| %>
          <div class="card" style="max-width":5rem>
            <div class="card-body">
              <h2><%= image_tag u.image.url,class: "small-img" %></h2>
              <h2><a href="/users/<%= u.id %>"><%= u.name %>さん</a></h2>
              <% if u.trainer == true %>
                <h2>
                <strong>トレーナー</strong>
                <i class="fas fa-user-graduate"></i>
                </h2>
              <% else %>
                <h2>
                <strong>トレーニー</strong>
                <i class="fas fa-user-tie"></i>
                </h2>
              <% end %>
              <h2>地域:<%= u.area %></h2>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
